<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/newEntry.css">
<link rel="stylesheet" href="css/table.css">
<link rel="stylesheet" href="css/daybook.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  
  <main class="new-entry">
    <section>
      <h3>Day Book</h3>
      <form action="/daybook" method="POST">
        <div class="single_entry">
          <label for="date">Date</label>
          <input type="date" name="date" id="date" required>
        </div>
        <div class="single_entry">
          <label for="type">Type of Entries</label>
          <select name="type" id="type">
            <option value="Credit Sale">Credit Sale</option>
            <option value="Payments">Payments</option>
            <option value="Purchases">Purchases</option>
            <option value="Customer to Bank">Customer to Bank</option>
            <option value="Bank to Firm">Bank to Firm</option>
          </select>
        </div>
        <div class="single_entry">
          <button>Submit</button>
        </div>
      </form>
    </section>
  

  </main>


  <script src="scripts/date.js"></script>

<%- include('../includes/end.ejs') %> 