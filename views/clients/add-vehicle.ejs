<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/newEntry.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <% if (customers.length > 0) { %>
  <main class="new-entry">
    <section>
      <h3>Add a New Vehicle</h3>
      <form action="/add-vehicle" method="POST">
        <div class="single_entry">
          <label for="customer">Customer</label>
          <select name="customer" id="customers">
            <% for(customer of customers) { %>
            <option value="<%= customer._id %>"><%= customer.customer_name %></option>
            <% } %>
          </select>
        </div>
        <div class="single_entry">
          <label for="amount">Vehicle No.</label>
          <input type="text" name="vehicle" required>
        </div>
        <div class="single_entry">
          <button type="submit">Add</button>
        </div>
      </form>
    </section>
  </main>
  <% } else { %>
    <h3 class="error">You haven't added customers</h3>
  <% } %>

  <script src="scripts/payment.js"></script>
  <script src="scripts/date.js"></script>

<%- include('../includes/end.ejs') %>